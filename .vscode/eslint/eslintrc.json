{
    "extends": "standard",
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["react"],
    "globals": {
        "assert": true,
        "artifacts": true,
        "contract": true
    },
    "rules": {
        // React Jsx
        "jsx-quotes": ["error", "prefer-double"],
        "react/jsx-boolean-value": "error",
        "react/jsx-curly-spacing": ["error", "never"],
        "react/jsx-equals-spacing": ["error", "never"],
        "react/jsx-indent": ["error", 2],
        "react/jsx-indent-props": ["error", 2],
        "react/jsx-no-duplicate-props": "error",
        "react/jsx-no-undef": "error",
        "react/jsx-tag-spacing": ["error", {"beforeSelfClosing": "always"}],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/self-closing-comp": "error",

        "comma-dangle": [2, "never"],
        "no-cond-assign": [2, "always"],
        "no-console": 0,
        "no-constant-condition": 2,
        "no-control-regex": 2,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-empty-character-class": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": [2, "functions"],
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        // NOTE: Currently we do not use it.
        "valid-jsdoc": 0,
        "valid-typeof": 2,

        // Best Practices
        "accessor-pairs": 0,
        "array-callback-return": 2,
        "block-scoped-var": 2,
        "complexity": [0, 11],
        "curly": 2,
        "default-case": 2,
        "dot-location": [2, "property"],
        "dot-notation": [2, {"allowKeywords": true}],
        "eqeqeq": [2, "allow-null"],
        "guard-for-in": 2,
        "no-alert": 1,
        "no-caller": 2,
        "no-case-declarations": 2,
        "no-div-regex": 2,
        "no-else-return": 2,
        "no-empty-function": [2, {"allow": ["arrowFunctions"]}],
        "no-empty-pattern": 2,
        "no-eq-null": 0,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-extra-label": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implicit-coercion": [2, {"boolean": true, "number": true, "string": true}],
        "no-implicit-globals": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-iterator": 2,
        "no-labels": [2, {"allowLoop": false, "allowSwitch": false}],
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-magic-numbers": ["error", {"ignoreArrayIndexes": true}],
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        // NOTE!
        "no-param-reassign": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-assign": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-unmodified-loop-condition": 2,
        "no-unused-expressions": 2,
        "no-unused-labels": 2,
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "no-useless-escape": "error",
        "no-void": 2,
        "no-warning-comments": [0, { "terms": ["TODO", "FIXME"], "location": "start" }],
        "no-with": 2,
        "radix": 2,
        // NOTE: Dont use var!
        "vars-on-top": 0,
        "wrap-iife": [2, "inside"],
        "yoda": 0,

        // Strict Mode
        // babel inserts `"use strict";` for us
        "strict": [2, "never"],

        // Variables
        "init-declarations": 0,
        "no-catch-shadow": 2,
        "no-delete-var": 2,
        "no-label-var": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-undefined": 2,
        "no-unused-vars": [2, {"vars": "local", "args": "all", "argsIgnorePattern": "_"}],
        "no-use-before-define": 0,

        // Node.js
        "callback-return": 2,
        "global-require": 0,
        "handle-callback-err": [2, "^(err|error|)[0-9]*$" ],
        "no-mixed-requires": [0, false],
        "no-new-require": 2,
        "no-path-concat": 2,
        "no-process-env": 0,
        "no-process-exit": 0,
        "no-restricted-modules": 0,
        "no-sync": 0,

        // Style
        "array-bracket-spacing": [2, "never"],
        "block-spacing": [2, "always"],
        "brace-style": [2, "1tbs", {"allowSingleLine": true }],
        "camelcase": [2, {"properties": "always"}],
        "comma-spacing": [2, {"before": false, "after": true}],
        "comma-style": [2, "last"],
        "computed-property-spacing": [2, "never"],
        "consistent-this": [2, "self"],
        "eol-last": 2,
        "func-names": 2,
        "func-style": [2, "declaration", { "allowArrowFunctions": true }],
        "id-blacklist": 0,
        "id-length": [2, {"min": 2, "exceptions": ["_"]}],
        "id-match": 0,
        "indent": [2, 2, { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
        "keyword-spacing": [0, {"before": true, "after": true, "overrides": {}}],
        "linebreak-style": [2, "unix"],
        "lines-around-comment": 0,
        "max-depth": [0, 4],
        "max-len": [0, 120, 2],
        "max-nested-callbacks": [2, 10],
        "max-params": [2, 6],
        "max-statements": [0, 10],
        "max-statements-per-line": ["error", { "max": 1 }],
        "new-cap": [2, {"capIsNewExceptions": ["Router", "Map", "Seq", "List", "Stack"]}],
        "new-parens": 2,
        "newline-after-var": 0,
        "newline-before-return": 2,
        "newline-per-chained-call": [2, {"ignoreChainWithDepth": 3}],
        "no-array-constructor": 2,
        "no-bitwise": 2,
        "no-continue": 0,
        "no-inline-comments": 2,
        "no-lonely-if": 0,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 1}],
        "no-negated-condition": 0,
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-plusplus": 0,
        "no-restricted-syntax": 0,
        "no-spaced-func": 2,
        "no-ternary": 0,
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "no-underscore-dangle": 0,
        "no-unneeded-ternary": 2,
        "no-whitespace-before-property": 2,
        "object-curly-spacing": [2, "never"],
        "one-var": [2, "never"],
        "one-var-declaration-per-line": 0,
        "operator-assignment": 0,
        "operator-linebreak": [2, "before"],
        "padded-blocks": [2, "never"],
        "quote-props": [2, "consistent"],
        "quotes": [2, "single", "avoid-escape"],
        // NOTE: Currently we donot use it.
        "require-jsdoc": 0,
        "semi": 0,
        "semi-spacing": [2, {"before": false, "after": true}],
        "sort-imports": 0,
        "sort-vars": 0,
        "space-before-blocks": 2,
        // NOTE: Reference to https://github.com/eslint/eslint/blob/master/docs/rules/space-before-function-paren.md
        "space-before-function-paren": [2,
            { "anonymous": "always", "named": "never" }
        ],
        "space-in-parens": [2, "never"],
        "space-infix-ops": 2,
        "space-unary-ops": [2, { "words": true, "nonwords": false }],
        // NOTE: Below exceptions are for beauty line-comments like "//----------"
        "spaced-comment": [1, "always", { "exceptions": ["-", "+"] }],
        "wrap-regex": 2,

        // ES6
        "arrow-body-style": [2, "as-needed"],
        "arrow-parens": [2, "always"],
        "arrow-spacing": 2,
        "constructor-super": 2,
        "generator-star-spacing": 2,
        "no-class-assign": 2,
        "no-confusing-arrow": [
          "error",
          {
            "allowParens": true
          }
        ],
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-duplicate-imports": "error",
        "no-new-symbol": 2,
        "no-restricted-imports": [2,
          "assert","buffer",
          "child_process","cluster",
          "crypto","dgram","dns","domain",
          "events","freelist","fs","http",
          "https","module","net","os",
          "path","punycode","querystring",
          "readline","repl","smalloc",
          "stream","string_decoder","sys",
          "timers","tls","tracing","tty","url",
          "util","vm","zlib"
        ],
        "no-this-before-super": 2,
        "no-useless-constructor": 2,
        "no-var": 2,
        "object-shorthand": ["error", "always", {"ignoreConstructors": false, "avoidQuotes": true}],
        "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }],
        "prefer-const": ["error", {"destructuring": "any"}],
        "prefer-reflect": 0,
        "prefer-rest-params": 2,
        "prefer-spread": 2,
        "prefer-template": 2,
        "require-yield": 2,
        "template-curly-spacing": [2, "never"]
    }
}
